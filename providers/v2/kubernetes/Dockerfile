# Multi-stage build for Kubernetes Provider Provider
# Generated by providers/v2/hack/generate-provider-main.go. DO NOT EDIT.
FROM golang:1.25-alpine AS builder

WORKDIR /workspace
COPY apis/ apis/
COPY providers/ providers/
COPY runtime/ runtime/
COPY generators/ generators/

# Build the provider binary
WORKDIR /workspace/providers/v2/kubernetes
RUN go mod tidy && CGO_ENABLED=0 GOOS=linux go build -a -o provider-kubernetes .

# Use distroless as minimal base image
FROM gcr.io/distroless/static:nonroot

WORKDIR /

# Copy the binary
COPY --from=builder /workspace/providers/v2/kubernetes/provider-kubernetes .

USER 65532:65532

ENTRYPOINT ["/provider-kubernetes"]

